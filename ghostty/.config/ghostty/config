theme                  = moonfly
background             = #000000
foreground             = #ffffff
font-size              = 12.5
background-opacity     = 0.8
background-blur-radius = 10

mouse-hide-while-typing = true

macos-titlebar-style = tabs

quit-after-last-window-closed = true

window-new-tab-position = end

# Keybinds
keybind = super+r=reload_config
keybind = super+n=new_window
keybind = super+t=new_tab
keybind = super+left=previous_tab
keybind = super+right=next_tab
keybind = alt+super+left=move_tab:-1
keybind = alt+super+right=move_tab:1
keybind = alt+super+up=goto_split:left
keybind = alt+super+down=goto_split:right
